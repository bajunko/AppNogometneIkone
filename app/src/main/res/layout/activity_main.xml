<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bajunko.appnogometneikone.MainActivity">

    <RelativeLayout
        android:id="@+id/idR"
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textViewKviz"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="onKviz"
            android:text="Kviz"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textViewKlubovi"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_above="@+id/textViewKviz"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="onKlubovi"
            android:text="Klubovi"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textViewZvijezde"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_above="@+id/textViewKviz"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="59dp"
            android:clickable="true"
            android:onClick="onZvijezde"
            android:text="Zvijezde"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="30sp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
